			<name>Transform</name>
			<params>
				<scale>0.1 0.1 0.1</scale>
			</params>
		</component>
		
 		<component>
			<name>Rigidbody</name>
			<params>
				<mass>1</mass>
			</params>
		</component>

		<component>
			<name>Collider</name>
			<params>
				<type>
					<name>cube</name>
					<extents>0.5</extents>
				</type>
			</params>
		</component>

		<component>
			<name>Model</name>
			<params>
				<model_name>cube.obj</model_name>
			</params>
		</component>

		<component>
			<name>FullbrightMaterial</name>
			<params>
				<diffuse_map>dev_grid_blue.png</diffuse_map>
			</params>
		</component>

		<component>
			<name>ProgramableCubeController</name>
		</component>

		<component>
			<name>ChaiInterpeter</name>
		</component>

	</components>
		
