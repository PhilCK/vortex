<?xml version="1.0" encoding="UTF-8"?>

<entity>
	
	<name>ScaleCube</name>
	<tags>physics cube scale</tags>

	<components>

		<!-- Transform and Physics -->

		<component>
			<name>Transform</name>
			<params>
				<scale>2 1 0.5</scale>
				<position>0 1 0</position>
			</params>
		</component>

		<component>
			<name>Rigidbody</name>
		</component>

		<component>
			<name>Collider</name>
			<params>
				<type>
					<name>Cube</name>
					<extents>1</extents>
				</type>
			</params>
		</component>

		<component>
			<name>Model</name>
			<params>
				<model_name>cube.obj</model_name>
			</params>
		</component>

		<component>
			<name>FullbrightMaterial</name>
			<params>
				<diffuse_map>dev_grid_red.png</diffuse_map>
				<diffuse_map_scale>1 1</diffuse_map_scale>
			</params>
		</component>

		<component>
			<name>ScaleObjectTest</name>
			<params>
				<scale_in>ALL</scale_in>
			</params>
		</component>

	</components>

	<children>

		<entity>

			<name>Sub</name>
			<tags>physics cube scale</tags>

			<components>

				<component>
					<name>Transform</name>
					<params>
						<scale>0.5 0.5 0.5</scale>
						<position>0 0 0</position>
					</params>
				</component>

				<component>
					<name>Collider</name>
					<params>
						<type>
							<name>Cube</name>
							<extents>1</extents>
						</type>
					</params>
				</component>

				<component>
					<name>Model</name>
					<params>
						<model_name>cube.obj</model_name>
					</params>
				</component>

				<component>
					<name>FullbrightMaterial</name>
					<params>
						<diffuse_map>dev_grid_red.png</diffuse_map>
						<diffuse_map_scale>1 1</diffuse_map_scale>
					</params>
				</component>

			</components>

		</entity>

	</children>
		
</entity>
